{
    "manifest_version": 2,

    "name": "Amazon to kintone",
    "description": "Create kintone record from Amazon product page",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
     "matches": ["https://www.amazon.co.jp/*"],
     "js": ["js/contentScript.js"]
    }],

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
      "https://*.cybozu.com/*"
    ]
}
